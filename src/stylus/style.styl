body
    background white
    color #333
    padding 0px
    margin 0px
    font-family Helvetica

.weekdayTable
    margin-top: 10px
    display: table
    width: 100%

.calendar
    display table
    width 100%
    // min-height 100%

.weekdayHeader
    display: table-row

.calendarHeader
    absolute: top left right
    padding-top: 10px
    background: rgba(255,255,255,0.95)
    border-bottom: 1px solid rgb(230,230,230)

.scrollContainer
    absolute: top left right bottom
    padding-top: 30px
    overflow-y: auto
    overflow-x: hidden
    
    &.calendarScroll
        padding-top: 91px
        
        .calendar
            min-height 100%

.calendarContainer
    display: inline-block
    width: 100%

.headerText
    display: inline-block
    padding-left: 15px
    -webkit-user-select: none
    cursor: default

.button
    font-size: 12px
    display: inline-block
    border-radius: 4px
    padding: 4px
    padding-left: 8px
    padding-right: 8px
    border: 1px solid rgb(210, 210, 210)
    margin-left: 1px
    user-select: none
    cursor: default
    box-shadow: 0px 1px 2px rgba(0,0,0,0.05)
    
    &:hover:active
        background: rgb(220,220,220)

.headerButtons
    float: right
    display: inline-block
    margin-right: 15px
    margin-top: 5px
    
    .button
        vertical-align top
        border-radius 0px
        margin 0px
        font-size 14px
        padding 0px 16px 0px 16px
        line-height 30px
        min-height 26px
        
        &:hover:active
            background rgb(245,245,245)
        
        &:first-child
            border-top-left-radius 4px
            border-bottom-left-radius 4px
            border-right 0px
            font-size 26px
            padding 2px 10px

        &:last-child
            border-top-right-radius 4px
            border-bottom-right-radius 4px
            border-left 0px
            font-size 26px
            padding 2px 10px

.week
    display: table-row

.weekHeader
    display: table-row

.month
    font-weight: 300
    font-size: 36px
    font-family: Helvetica Neue

.year
    font-weight: 100
    font-size: 36px
    font-family: Helvetica Neue
    margin-left: 4px

.dayOfWeek
    width: 130px
    display: table-cell
    text-align: right
    padding-right: 15px
    padding-bottom: 8px
    
    &.weekend
        color: rgb(145,145,145)

.day
    height: 120px
    width: 130px
    background: white
    display: table-cell
    border: 1px solid rgb(240,240,240)
    border-right: none
    border-top: none
    position: relative
    
    .items
        absolute: top 30px left bottom 8px right
        padding: 10px
        padding-bottom: 0px
        font-size: 12px
        overflow: hidden
        
        .item
            display: block
            overflow: ellipsis
            white-space: nowrap
            padding: 4px
            background: rgb(223,163,38)
            color: white
            border-radius: 2px
            margin-bottom: 1px
            cursor: pointer
    
    &.weekend
        background: rgb(252,252,252)

.badge
    display inline-block
    float right
    margin-right 9px
    margin-top 6px
    cursor default
    user-select none
    
    .monthLabel
        display inline-block
        vertical-align middle
        margin-right 8px

    .label
        display inline-block
        vertical-align middle
        padding: 4px
        font-size: 18px

.day.weekend .badge
    
    .label
        color: rgb(135,135,135)

.day.outOfMonth .badge
    .label
        color: rgb(195,195,195)

.day.today .badge
    .label
        background #FC3D39
        color white
        border-radius: 14px
        text-align: center
        width: 29px
        padding-left: 0px
        padding-right: 0px

.day.today.outOfMonth .badge
    .label
        background lighten(#FC3D39, 15%)
        color rgba(255,255,255,0.5)

.day:first-child
    border-left none
